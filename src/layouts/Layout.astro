---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Navbar />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    color: #171a20;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .gradient-custom {
    background-image: linear-gradient(
      183deg,
      rgba(251, 251, 251, 0.3) 10%,
      rgba(226, 226, 226, 0) 15%,
      rgba(0, 212, 255, 0) 100%
    );
  }

  @font-face {
    font-family: "Universal-Sans-Display-Regular";
    src: url("../../public/fonts/Universal-Sans-Display-Regular.woff2")
      format("woff2");
  }
  @font-face {
    font-family: "Universal-Sans-Display-Medium";
    src: url("../../public/fonts/Universal-Sans-Display-Medium.woff2")
      format("woff2");
  }
  @font-face {
    font-family: "Universal-Sans-Text-Bold";
    src: url("../../public/fonts/Universal-Sans-Text-Bold.woff2")
      format("woff2");
  }
  @font-face {
    font-family: "Universal-Sans-Text-Regular";
    src: url("../../public/fonts/Universal-Sans-Text-Regular.woff2")
      format("woff2");
  }
  @font-face {
    font-family: "Universal-Sans-Text-Medium";
    src: url("../../public/fonts/Universal-Sans-Text-Medium.woff2")
      format("woff2");
  }
</style>
